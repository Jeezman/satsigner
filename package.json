{
  "name": "satsigner",
  "private": true,
  "version": "0.1.0",
  "description": "UTXO Manager and Message Signer",
  "keywords": [
    "Bitcoin"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/satsigner/satsigner/issues"
  },
  "scripts": {
    "prepare": "husky",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix --",
    "format": "prettier --config --check .prettierrc .",
    "format:fix": "prettier --config .prettierrc . --write"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "prettier": "^3.2.5"
  },
  "packageManager": "yarn@1.22.21",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "yarn lint:fix",
      "yarn format:fix"
    ]
  }
}
