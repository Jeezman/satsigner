{
  "name": "satsigner",
  "version": "0.1.0",
  "description": "UTXO Manager and Message Signer",
  "bugs": {
    "url": "https://github.com/satsigner/satsigner/issues"
  },
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "nohoist": [
      "**/rn-nodeify/**",
      "**/rn-nodeify"
    ]
  },
  "packageManager": "yarn@1.22.21",
  "keywords": [
    "Bitcoin"
  ],
  "scripts": {
    "format": "prettier --config --check .prettierrc .",
    "format:fix": "prettier --config .prettierrc . --write",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix --"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "prettier-plugin-pkg": "^0.18.1",
    "prettier-plugin-sort-json": "^4.1.1",
    "turbo": "^2.0.1"
  }
}
